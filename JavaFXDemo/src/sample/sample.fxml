<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.canvas.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>


<GridPane alignment="center" hgap="10" vgap="10"
          xmlns="http://javafx.com/javafx/10.0.2-internal"
          xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="sample.Controller">
   <children>
      <BorderPane prefHeight="500.0" prefWidth="500.0">
         <center>
            <Canvas fx:id="_canvas" height="400.0" width="400.0" />
         </center>
         <left>
            <VBox>
            <ColorPicker fx:id="_colorPicker" prefHeight="38.0" prefWidth="38.0" />
            <Button  onAction="#onShapeChange" text="Oval" prefWidth="80"/>
            <Button  onAction="#onShapeChange" text="Rectangle" prefWidth="80"/>
               <Button onAction="#clear" text="Clear" prefWidth="80"/>
            </VBox>
         </left>
         <bottom>
            <Button mnemonicParsing="false" onAction="#onExitClick" text="Exit" BorderPane.alignment="CENTER" />
         </bottom>
      </BorderPane>
   </children>
   <columnConstraints>
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
   </rowConstraints>
</GridPane>
